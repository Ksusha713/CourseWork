<!DOCTYPE html>
<html lang="en">

<%- include('partials/header') %>

<body>
	<header>
		<%- include('partials/navbar') %>
	</header>
	<h1>Your Cart</h1>
	<div class="cart-container">
		<% cart.forEach(product=> { %>
			<div class="cart-item">
				<img src="<%= product.image %>" alt="<%= product.name %>">
				<div class="item-details">
					<h2>
						<%= product.name %>
					</h2>
					<p><strong>Quantity:</strong>
						<%= product.quantity %>
					</p>
					<p><strong>Price:</strong> $<%= product.price %>
					</p>
				</div>
				<div class="quantity-buttons">
					<button class="removeOne" onclick="removeOne('<%= product.ProductID %>', 1)">âˆ’</button>
					<span class="quantity"><%= product.quantity %></span>
					<button class="addOne" onclick="addOne('<%= product.ProductID %>', 1)" class="plus-button">+</button>
				</div>
				<div class="remove-button">
					<button class="remove" data-id="<%= product.ProductID %>" class="minus-button">Remove</button>
				</div>
				<p class="product-msg"></p>
			</div>
			<% }); %>
	</div>

	<div class="cart-summary">
		<h2 id="total">Total: $<%= sum.toFixed(2) %>
		</h2>
		<button class="order"><a href="/checkout">Checkout</a></button>
	</div>
</body>

</html>

<script>
	async function remove(id) {
		const body = JSON.stringify({ id });
		const response = await fetch("/cart/remove", {
			headers: {
				"Content-Type": "application/json",
			},
			method: "POST",
			body: body,
		});

		if (!response.ok) {
			return 0;
		}
		const data = await response.json();
		return data
	}
	document.addEventListener("click", async (e) => {
		if (e.target.classList.contains('remove')) {
			const removed = await remove(e.target.dataset.id);
			if (removed.status === 200) {	
				const productCard = e.target.closest('.cart-item')
				const message = productCard.querySelector('.product-msg')
				console.log(e.target.parentElement)
				message.innerText = "Removed";
				message.style.color = 'red'
				message.style.marginLeft = '10px'
				setTimeout(() => {
					productCard.remove();;
				}, 1000);
				const totalCost = document.getElementById('total')
				totalCost.textContent = `Total: $${removed.sum.toFixed(2)}`;
			}
		}
	});

